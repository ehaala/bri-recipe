<h1>
	<%= recipe.name %>
	<form method="POST" action="/myrecipes">
		<input hidden type='text' name='name' value='<%= recipe.name %>'>
		<input hidden type="text" name="recipeid" value="<%= recipe.id %>">
		<button class="btn btn-primary" type="submit">Favorite</button>
	</form>
</h1>

<div class='row'>
	<div class='col-sm-5'>
		<ol>
			<% recipe.instructions.forEach(function(instruction) { %>
					<li><%= instruction.instruction %></li>
			<% }); %>
		</ol>
	</div>

	<div class='col-sm-2'></div>

	<div class='col-sm-5 ingredients'>
		<table class='kalam'>
			<% recipe.ingredients.forEach(function(ingredient) { %>
				<tr>
					<td><%= ingredient.amount %></td>
					<td><%= ingredient.ingredient %></td>
				<tr>
			<% }); %>
		</table>
	</div>
</div>